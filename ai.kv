<MainScreen>:
	MDScreen:
		MDTextField:
			hint_text: "TYPE TO GENERATE"
			mode: "rectangle"
			pos_hint: {"center_x": .52, "center_y": .84}
			size_hint_x: .5
		MDRaisedButton:
    		text: "GENERATE"
    		md_bg_color: "teal"
			pos_hint: {"center_x": .5, "center_y": .75}
		MDTopAppBar:
			title: "Image Generator"
			height:10
			pos_hint: {"top": 1}
		MDScrollView:
			size_hint_x: .99
			size_hint_y: .60
			pos_hint: {"center_x": .5, "center_y": .4}
			
			MDGridLayout:
				cols: 4	
				row_default_height: (self.width - self.cols*self.spacing[0]) / self.cols
				row_force_default: True
				adaptive_height: True
				padding: dp(5), dp(5)
				spacing: dp(5)
				
				MDSmartTile:
					radius: 24	
					box_radius: [0, 0, 24, 24]
					box_color: 1, 1, 1,.2
					box_pos_hint:{"center_x": .5, "center_y": .4}
					source: "D:\Project\thq.jpg"

				MDSmartTile:
					radius: 24
					box_radius: [0, 0, 24, 24]
					box_color: 1, 1, 1, .2
					source: "D:\Project\sudan.jpg"

				MDSmartTile:
					radius: 24
					box_radius: [0, 0, 24, 24]
					box_color: 1, 1, 1, .2
					source: "D:\Project\Picsart.jpg"
				
				MDSmartTile:
					radius: 24
					box_radius: [0, 0, 24, 24]
